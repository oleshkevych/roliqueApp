<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="io.rolique.roliqueapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".RoliqueApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".screens.navigation.NavigationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.welcome.WelcomeActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".screens.newChat.NewChatActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".screens.chat.ChatActivity"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>