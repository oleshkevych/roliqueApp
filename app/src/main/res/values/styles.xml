<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.Rolique.Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Widget.Rolique.Button.Blue" parent="Widget.Rolique.Button">
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="Widget.Rolique.ProgressBar" parent="Theme.AppCompat.Light"/>

    <style name="Widget.Rolique.ProgressBar.White" parent="Widget.Rolique.ProgressBar">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="Widget.Rolique.View.DateDividerGrey" parent="Theme.AppCompat.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@color/black_alpha_80</item>
    </style>

    <style name="popupAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="popupCheckInAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_check_in_show</item>
        <item name="android:windowExitAnimation">@anim/popup_check_in_hide</item>
    </style>
</resources>
