<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/grey_600">

    <TextView
        android:id="@+id/text_view_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:gravity="center"
        android:drawablePadding="16dp"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="Phone"/>

    <EditText
        android:id="@+id/edit_text_key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:gravity="center|start"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/grey_600"
        android:textStyle="bold"
        android:hint="@string/bottom_dialog_add_key_hint"/>

    <EditText
        android:id="@+id/edit_text_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:padding="8dp"
        android:gravity="center|start"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@color/grey_600"
        android:textStyle="bold"
        android:hint="@string/bottom_dialog_add_value_hint"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:id="@+id/text_view_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="95"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/green_700_alpha_50"
            android:padding="16dp"
            android:gravity="center|start"
            android:drawableStart="@drawable/ic_save_black_24dp"
            android:drawablePadding="16dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="@string/bottom_dialog_add_save"
            android:visibility="gone"/>

        <View
            android:id="@+id/view_divider"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="@color/grey_600"/>

        <TextView
            android:id="@+id/text_view_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="95"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/red_700"
            android:padding="16dp"
            android:gravity="center|start"
            android:drawableStart="@drawable/ic_cancel_black_24dp"
            android:drawablePadding="16dp"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:text="@string/bottom_dialog_add_cancel"/>
    </LinearLayout>
</LinearLayout>