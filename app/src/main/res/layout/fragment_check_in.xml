<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.rolique.roliqueapp.screens.navigation.checkIn.CheckInFragment">

    <com.google.android.gms.maps.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_timesheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:foreground="?attr/selectableItemBackground"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:srcCompat="@drawable/ic_assessment_white_24dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_check_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:foreground="?attr/selectableItemBackground"
        app:backgroundTint="@color/colorPrimary"
        app:fabSize="normal"
        app:layout_anchor="@id/button_timesheet"
        app:layout_anchorGravity="center_horizontal"
        app:srcCompat="@drawable/ic_my_location_white_24dp"/>

    <LinearLayout
        android:id="@+id/layout_check_in_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="88dp"
        android:background="@color/transparent"
        android:visibility="gone"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_check_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_text_view_message_user_single"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:text="@string/navigation_menu_check_in"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/white"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/text_view_business"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_text_view_message_user_single"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:text="@string/fragment_check_in_business"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/white"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/text_view_remotely"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_text_view_message_user_single"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:text="@string/fragment_check_in_remotely"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/white"
            tools:visibility="visible"/>

        <TextView
            android:id="@+id/text_view_day_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="6dp"
            android:background="@drawable/shape_text_view_message_user_single"
            android:foreground="?attr/selectableItemBackground"
            android:padding="8dp"
            android:text="@string/fragment_check_in_day_off"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textColor="@color/white"
            tools:visibility="visible"/>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
