<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/error_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <io.rolique.cameralibrary.widget.DrawableTextView
        android:id="@+id/text_view_no_connection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="16dp"
        app:drawableTopCompat="@drawable/ic_cloud_off_white_48dp"
        android:text="@string/activity_image_viewer_network_error"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/white"/>

    <io.rolique.cameralibrary.widget.DrawableTextView
        android:id="@+id/button_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_retry_button"
        android:foreground="?selectableItemBackground"
        android:paddingBottom="8dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:paddingTop="8dp"
        android:text="@string/activity_image_viewer_network_retry"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textColor="@color/white"
        android:textStyle="bold"/>
</LinearLayout>